extends layout

block layout-content
    div.View.WelcomeView
        h1.Banner Auth0Site
        div.Message
            div.Title
                h3 IS219 Final
                h1 Cities Project
            span.Details Access the Cities Records Web Portal
        div.NavButtons
            if isAuthenticated
                a(href="/user")
                    div.NavButton My Profile
                a(href="http://localhost:3000/api/v1/cities")
                    div.NavButton View Records
            else
                a(href="/login")
                    div.NavButton Log in